{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "CCR Desktop",
  "version": "3.8.2",
  "identifier": "com.ccr.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png",
      "icons/icon@2x.png",
      "icons/icon.ico"
    ],
    "publisher": "CCR Team",
    "copyright": "Copyright Â© 2025 CCR Team",
    "category": "DeveloperTool",
    "shortDescription": "Claude Code Configuration Manager - Desktop Application",
    "longDescription": "CCR Desktop is a powerful configuration management tool for Claude Code, Codex, Gemini, and other AI CLI platforms. Features include profile switching, history tracking, WebDAV sync, and multi-platform support.",
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "CCR Desktop - Claude Code Configuration Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false
    },
    "withGlobalTauri": false
  }
}
