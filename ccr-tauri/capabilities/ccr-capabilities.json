{
  "$schema": "https://schema.tauri.app/config/2/capabilities",
  "identifier": "ccr-capabilities",
  "description": "CCR Desktop 应用权限配置",
  "windows": ["*"],
  "permissions": [
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/.ccs_config.toml",
        "$HOME/.claude/settings.json",
        "$HOME/.claude/backups",
        "$HOME/.claude/backups/*",
        "$HOME/.claude/ccr_history.json"
      ]
    }
  ]
}
